{
  "manifest_version": 3,
  "name": "Studocu Tools",
  "version": "1.0", 
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.studeersnel.nl/nl/document/*/*",
    "*://*.studocu.com/en/document/*/*",
    "*://*.studocu.id/id/document/*/*",
    "*://*.studocu.vn/vn/document/*/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "js": ["download.js"],
      "matches": [
        "*://*.studeersnel.nl/nl/document/*/*",
        "*://*.studocu.com/en/document/*/*",
        "*://*.studocu.id/id/document/*/*",
        "*://*.studocu.vn/vn/document/*/*"
      ],
      "run_at": "document_end"
    }
  ]
}